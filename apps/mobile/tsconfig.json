{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "esnext",
    "lib": ["es2017"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@shambu/shared": ["../../packages/shared/src"],
      "@shambu/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src", "App.tsx"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
} 